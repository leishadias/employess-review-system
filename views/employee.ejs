<link rel="stylesheet" href="/css/empList.css">

<h5 class="text-center mt-3">All Employees List</h5>
<div class="container mt-4">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Sl.No.</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Admin</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i = 0; i<employee.length; i++) {%>
        <tr>
          <th scope="row"><%= i+1 %></th>
          <td> <%= employee[i].name%> </td>
          <td> <%= employee[i].email%> </td>
          <td> <%= employee[i].isAdmin%> </td>
          <% if(locals.user.id != employee[i]._id) {%>
            <td> 
              <a href="/admin/deleteEmployee/<%= employee[i]._id %>" class="btn delete-btn btn-md">Delete</a>
            </td>
          <%}else{%>
            <!--in case of self, shouldn't be able to delete-->
            <td>
              <a href="" class="btn disbled-delete-btn btn-md">Delete</a>
            </td>
          <%}%> 
        </tr>  
      <%}%>
    </tbody>
  </table>
</div>